.calendar > .grid {
  border-collapse: collapse;
}
.calendar > .grid:nth-child(2) view {
  border-top: 0.5rpx solid #ccc;
}
.calendar > .grid view {
  padding: 15rpx 0;
  border-bottom: 0.5rpx solid #ccc;
  border-right: 0.5rpx solid #ccc;
}
.calendar > .grid view:first-child {
  border-left: 0.5rpx solid #ccc;
}

